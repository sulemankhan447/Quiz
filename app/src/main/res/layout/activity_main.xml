<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suleman.quiz.MainActivity">

    <TextView
        android:id="@+id/tvQn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="101dp" />

    <Button
        android:id="@+id/btnOp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_below="@+id/tvQn"
        android:layout_alignStart="@+id/btnOp2"
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/btnOp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Button"
        android:layout_below="@+id/btnOp1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnOp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btnOp2"
        android:layout_alignStart="@+id/btnOp2" />

    <Button
        android:id="@+id/btnOp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnOp3"
        android:layout_below="@+id/btnOp3"
        android:layout_marginTop="36dp"
        android:text="Button" />
</RelativeLayout>
